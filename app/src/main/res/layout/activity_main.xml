<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.osiatis.moocandroid.app.MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/msgPrompt"
        android:id="@+id/promptTextId"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/welcomeText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMsgId"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/promptTextId"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msgBtn"
        android:id="@+id/msgBtnId"
        android:layout_below="@+id/editMsgId"
        android:layout_centerHorizontal="true"
        android:onClick="onMsgBtnClick" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgBtnId"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/msgGridView"
        android:background="#fffdca" />

</RelativeLayout>
